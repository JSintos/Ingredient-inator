@page
@model LoginModel
@{
    ViewData["Title"] = "Sign in";
}

@section Styles {
    <link href="~/css/identity/authorization.css" rel="stylesheet">
}

<div class="container">
    <h1 class="display-4 text-center">Sign in</h1>

    <form class="mt-3" id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row justify-content-center align-items-center">
            <div class="col-5 px-0 p-4">
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email address">
                    <span asp-validation-for="Input.Email" class="text-light"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Input.Password" class="text-light"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" type="checkbox">
                    <label class="form-check-label text-light" for="rememberMe">Remember me</label>

                    @* <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div> *@
                </div>
                <hr>
                <div class="row">
                    <div class="col-9 mt-1">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light">Don't have an account?</a>
                    </div>

                    <div class="col">
                        <button class="btn btn-primary" type="submit">Sign in</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
