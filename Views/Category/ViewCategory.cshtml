@model Ingredient_inator.Models.CategoryRecipeViewModel
@{
    ViewData["Title"] = "ViewCategory";
}

<h1>View Category</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Category.Name)
    </h4>
    <hr />
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Recipes)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="ViewRecipe" asp-controller="Recipe" asp-route-id="@item.RecipeId">Details</a> |
                        @if (ViewBag.UserId == Model.Category.Author)
                        {
                            <p>
                                <a asp-action="Edit" asp-controller="Recipe" asp-route-id="@item.RecipeId">Edit</a> |
                                <a asp-action="Delete" asp-controller="Recipe" asp-route-id="@item.RecipeId" onclick='return confirm("Are you sure?")'>Delete</a>
                            </p>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Category.CategoryId">Edit Category</a> |
    <a asp-action="Delete" asp-route-id="@Model.Category.CategoryId" onclick='return confirm("Are you sure?")'>Delete Category</a> |
    <a asp-action="Index">Back to Categories List</a>
</div>
