@model IEnumerable<Ingredient_inator.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="New">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="ViewCategory" asp-route-id="@item.CategoryId">Details</a> |
                @if (ViewBag.UserId == item.Author)
                {
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" onclick='return confirm("Are you sure?")'>Delete</a>
                    </p>
                }
            </td>
        </tr>
}
    </tbody>
</table>
