@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@model IEnumerable<Ingredient_inator.Models.Category>
@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <style>
        h1 {
            display: inline-block;
            vertical-align: middle;
        }
        .btn-red, .btn-red:active, .btn-red:visited {
            background-color: #AC3931;
        }
    
        .btn-red:hover {
            background-color: #D64C42;
        }
    </style>
}

<div>
    <h1 class="mt-2">Categories</h1>

    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="New" class="btn btn-primary ml-3">Create Category</a>
    }
</div>

<div class="mt-3">
    @foreach (var item in Model)
    {
        <div class="btn-group mt-2 ml-2" role="group">
            <a asp-action="ViewCategory" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-red text-light" type="button">
                @Html.DisplayFor(modelItem => item.Name)
            </a>
            <a asp-action="ViewCategory" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-red text-light" type="button">
                <i class="far fa-eye fa-lg"></i>
            </a>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}