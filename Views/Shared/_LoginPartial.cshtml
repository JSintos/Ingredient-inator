@using Microsoft.AspNetCore.Identity
@using Ingredient_inator.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link" id="manage" title="Manage">Hi, @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="form-inline" id="logoutForm">
            <button class="nav-link btn btn-link" id="logout" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link" id="register">Sign Up</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link" id="login">Sign In</a>
    </li>
}

</ul>
