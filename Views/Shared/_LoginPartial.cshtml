@using Microsoft.AspNetCore.Identity
@using Ingredient_inator.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="accountDropdown" role="button">
            Hi, @UserManager.GetUserName(User)!
        </a>

        <div aria-labelledby="accountDropdown" class="dropdown-menu">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="dropdown-item" id="manage" title="Manage">Manage your account</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/Home/RecipeEntities">Your recipes and categories</a>
            <a class="dropdown-item" href="/Home/ReviewEntities">Your reviews</a>
        </div>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="form-inline" id="logoutForm">
            <button class="nav-link btn btn-link" id="logout" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link" id="register">Sign Up</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link" id="login">Sign In</a>
    </li>
}

</ul>
