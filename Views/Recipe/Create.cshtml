@model Ingredient_inator.Models.RecipeCreateViewModel
@{
    ViewData["Title"] = "New Recipe";
}

<h1>Create Recipe</h1>
<hr>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">

                @foreach (var item in Model.Categories)
                {
                    <option value="@Html.Raw(item.CategoryId)">@Html.DisplayFor(modelItem => item.Name)</option>
                }

                </select>
            </div>
        
            <div class="form-group">
                <label asp-for="ServingSize" class="control-label"></label>
                <input asp-for="ServingSize" class="form-control" />
                <span asp-validation-for="ServingSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhotoLink" class="control-label"></label>
                <input asp-for="PhotoLink" class="form-control" />
                <span asp-validation-for="PhotoLink" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="VideoLink" class="control-label"></label>
                <input asp-for="VideoLink" class="form-control" />
                <span asp-validation-for="VideoLink" class="text-danger"></span>
            </div>
        </div>

        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="PortionList" class="control-label"></label>
                        <textarea asp-for="PortionList" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="PortionList" class="text-danger"></span>
                    </div>
                </div>
    
                <div class="col">
                    <div class="form-group">
                        <label asp-for="IngredientList" class="control-label"></label>
                        <textarea asp-for="IngredientList" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="IngredientList" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Steps" class="control-label"></label>
                <textarea asp-for="Steps" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Steps" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>

<a asp-action="Index" class="mt-3">< Go back</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/jquery-cookie/jquery.cookie.min.js"></script>
    <script src="~/lib/todolist/js/script.js"></script>
}
