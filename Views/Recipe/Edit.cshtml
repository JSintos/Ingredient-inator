@model Ingredient_inator.Models.RecipeEditViewModel
@{
    ViewData["Title"] = Model.Recipe.Name + " - Edit";
}

<h1>Edit @Model.Recipe.Name</h1>
<hr>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Recipe.RecipeId">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label"></label>
                <input asp-for="Recipe.Name" class="form-control" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Recipe.Category" class="control-label"></label>
                <select asp-for="Recipe.Category" class="form-control">

                @foreach (var item in Model.Categories)
                {
                    @if (item.CategoryId == Model.Recipe.Category)
                    {
                        <option selected value="@Html.Raw(item.CategoryId)">@Html.DisplayFor(modelItem => item.Name)</option>
                    }
                    else
                    {
                        <option value="@Html.Raw(item.CategoryId)">@Html.DisplayFor(modelItem => item.Name)</option>
                    }
                }

                </select>
            </div>
        
            <div class="form-group">
                <label asp-for="Recipe.ServingSize" class="control-label"></label>
                <input asp-for="Recipe.ServingSize" class="form-control" />
                <span asp-validation-for="Recipe.ServingSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Recipe.PhotoLink" class="control-label"></label>
                <input asp-for="Recipe.PhotoLink" class="form-control" />
                <span asp-validation-for="Recipe.PhotoLink" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Recipe.VideoLink" class="control-label"></label>
                <input asp-for="Recipe.VideoLink" class="form-control" />
                <span asp-validation-for="Recipe.VideoLink" class="text-danger"></span>
            </div>
        </div>

        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Recipe.PortionList" class="control-label"></label>
                        <textarea asp-for="Recipe.PortionList" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Recipe.PortionList" class="text-danger"></span>
                    </div>
                </div>
    
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Recipe.IngredientList" class="control-label"></label>
                        <textarea asp-for="Recipe.IngredientList" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Recipe.IngredientList" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Recipe.Steps" class="control-label"></label>
                <textarea asp-for="Recipe.Steps" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Recipe.Steps" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>

<a asp-action="Index" class="mt-3">< Go back</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
